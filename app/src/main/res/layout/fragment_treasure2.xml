<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamone.tanfieldrailway.TreasureFragment"
    android:layout_marginTop="55dp"
    android:background="#253125">


    <Button
        android:id="@+id/ResetTreasureButton"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/colorRed"
        android:text="RESET TREASURES"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!-- rename the ids -->
    <ImageButton
        android:id="@+id/button0"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_button"
        android:layout_alignLeft="@+id/ResetTreasureButton"
        android:layout_alignStart="@+id/ResetTreasureButton" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_button"
        android:layout_alignRight="@+id/ResetTreasureButton"
        android:layout_alignEnd="@+id/ResetTreasureButton" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_button"
        android:layout_alignLeft="@+id/ResetTreasureButton"
        android:layout_alignStart="@+id/ResetTreasureButton" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_button"
        android:layout_alignRight="@+id/ResetTreasureButton"
        android:layout_alignEnd="@+id/ResetTreasureButton" />

    <ImageButton
        android:id="@+id/button4"
        android:layout_marginTop="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_button"
        android:layout_alignLeft="@+id/ResetTreasureButton"
        android:layout_alignStart="@+id/ResetTreasureButton" />

    <ImageButton
        android:id="@+id/button5"
        android:layout_marginTop="280dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/temp_button"
        android:layout_alignRight="@+id/ResetTreasureButton"
        android:layout_alignEnd="@+id/ResetTreasureButton" />
</RelativeLayout>