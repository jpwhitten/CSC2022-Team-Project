<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="teamone.tanfieldrailway.DirectionFragment" android:layout_marginTop="55dp" android:background="#253125">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:foregroundGravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_car"/>

                <TextView android:id="@+id/by_car_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="By Car:"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    />


            </LinearLayout>


            <TextView android:id="@+id/by_car_description"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:text="Get here by car instructions"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                />

            <View
                android:layout_width="330dp"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:foregroundGravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_bus" />

                <TextView android:id="@+id/by_bar_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="By Public Transport:"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    />

            </LinearLayout>

            <TextView android:id="@+id/by_bus_description"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:text="Get here by bus instructions"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingBottom="30dp"
                android:paddingTop="10dp"
               >

                <RelativeLayout android:id="@+id/phone_btn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center_horizontal">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/direction_square"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_phone"
                            android:gravity="center_horizontal"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:layout_marginBottom="30dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Phone"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_marginTop="55dp"
                           />

                </RelativeLayout>

                <RelativeLayout android:id="@+id/map_btn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/direction_square"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_map2"
                        android:gravity="center_horizontal"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:layout_marginBottom="30dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Map"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginTop="55dp"
                        />

                </RelativeLayout>




                <RelativeLayout android:id="@+id/email_btn"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/direction_square"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_email"
                        android:gravity="center_horizontal"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:layout_marginBottom="30dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Email"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginTop="55dp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
